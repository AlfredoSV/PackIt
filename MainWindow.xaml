<Window x:Class="PackIt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PackIt"
        mc:Ignorable="d"
        Title="Pack It" Height="300" Width="370" ResizeMode="NoResize">
    <Window.DataContext>
        <local:FileViewModel/>
    </Window.DataContext>
    <StackPanel Margin="5" HorizontalAlignment="Center" Width="300">
        <TextBlock TextAlignment="Center" FontSize="21" FontFamily="Agency FB"  Text="Pack It"></TextBlock>
        <Button Foreground="White" Background="#6B98D1" Width="100" Margin="10" Content="Load File(s)" x:Name="LoadFile" Click="LoadFile_Click"></Button>
        <ProgressBar x:Name="progressUploadFile" Margin="5" Height="20"></ProgressBar>
        <DataGrid IsReadOnly="True"  Height="100" Margin="5" AutoGenerateColumns="False" ItemsSource="{Binding Data}">
            <DataGrid.Columns >
                <DataGridTextColumn Width="200" Header="Name" Binding="{Binding Name}"></DataGridTextColumn>
                <DataGridTextColumn Width="30" Header="Type" Binding="{Binding Type}"></DataGridTextColumn>
                <DataGridTextColumn Width="200" Header="Path" Binding="{Binding Path}"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
        <DockPanel>
            <TextBlock Margin="5" Text="Salida: "></TextBlock>
            <TextBlock Margin="5" Text="{Binding OutputPath, UpdateSourceTrigger=PropertyChanged}"></TextBlock>
        </DockPanel>
    </StackPanel>
</Window>
