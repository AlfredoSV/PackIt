<Window x:Class="PackIt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PackIt"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <local:FileViewModel/>
    </Window.DataContext>
    <StackPanel HorizontalAlignment="Center">
        <Button Foreground="White" Background="#6B98D1" Width="100" Margin="10" Content="Load File" x:Name="LoadFile" Click="LoadFile_Click"></Button>
        <TextBlock Margin="10" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"></TextBlock>
        <TextBlock Margin="10" Text="{Binding Type, UpdateSourceTrigger=PropertyChanged}"></TextBlock>
    </StackPanel>
</Window>
